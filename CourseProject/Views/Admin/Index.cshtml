@{ ViewData["Title"] = "Админ-панель"; }

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .admin-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none; 
    }
    .admin-card:hover {
        transform: translateY(-5px); 
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin: 0 auto 15px;
        font-size: 1.8rem;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">Панель Администратора</h2>
            <p class="text-muted">Обзор и управление системой университета</p>
        </div>
        <span class="text-muted small">@DateTime.Now.ToString("dd MMMM yyyy")</span>
    </div>

    <div class="row g-4"> <div class="col-md-6 col-lg-3">
            <div class="card h-100 admin-card shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Студенты</h5>
                    <p class="card-text text-muted small mb-4">База данных студентов, редактирование профилей и групп.</p>
                    <a asp-action="ManageStudents" class="btn btn-outline-primary w-100 stretched-link">Управление</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 admin-card shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-success bg-opacity-10 text-success">
                        <i class="bi bi-person-workspace"></i>
                    </div>
                    <h5 class="card-title fw-bold">Преподаватели</h5>
                    <p class="card-text text-muted small mb-4">Список лекторов, назначение дисциплин и кафедр.</p>
                    <a asp-action="ManageTeachers" class="btn btn-outline-success w-100 stretched-link">Управление</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 admin-card shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-collection-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Группы</h5>
                    <p class="card-text text-muted small mb-4">Формирование учебных групп и распределение.</p>
                    <a asp-action="ManageGroups" class="btn btn-outline-warning w-100 stretched-link">Управление</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 admin-card shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-info bg-opacity-10 text-info">
                        <i class="bi bi-journal-bookmark-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Предметы</h5>
                    <p class="card-text text-muted small mb-4">Редактирование списка дисциплин и курсов.</p>
                    <a asp-action="ManageSubjects" class="btn btn-outline-info w-100 stretched-link">Управление</a>
                </div>
            </div>
        </div>
        
    </div>
</div>