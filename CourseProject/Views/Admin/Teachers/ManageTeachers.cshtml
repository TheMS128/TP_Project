@model CourseProject.Models.AdminViewModels.Teacher.ManageTeachersViewModel
@{ ViewData["Title"] = "Преподаватели"; }

<h2>Управление преподавателями</h2>

<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
    <a asp-action="CreateTeacher" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Добавить преподавателя
    </a>

    <form asp-action="ManageTeachers" method="get" class="d-flex">
        <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control me-2" placeholder="Поиск преподавателя..." style="width: 250px;" />
        <button type="submit" class="btn btn-outline-primary">Поиск</button>
        <a asp-action="ManageTeachers" class="btn btn-outline-secondary ms-1">Сброс</a>
    </form>
</div>

<table class="table table-hover align-middle table-bordered">
    <thead class="table-light">
    <tr>
        <th class="text-start">ФИО</th>
        <th class="text-center">Email</th>
        <th class="text-center">Описание</th>
        <th class="text-center">Предметы</th>
        <th class="text-end" style="width: 250px;">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var teacher in Model.Teachers)
    {
    <tr>
        <td class="text-start">@teacher.FullName</td>
        <td class="text-center">@teacher.Email</td>
        <td class="text-center">@teacher.Description</td>
        
        <td class="text-center">
            <div class="dropdown d-inline-block">
                <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 140px;">
                    Предметов: @(teacher.AssignedSubjects?.Count ?? 0)
                </button>

                <div class="dropdown-menu p-3 shadow text-start" style="width: 350px;" onclick="event.stopPropagation()">
                    <form asp-action="UpdateTeacherSubjects" method="post">
                        <input type="hidden" name="teacherId" value="@teacher.Id" />

                        <h6 class="dropdown-header px-0">Выберите предметы:</h6>

                        <input type="text"
                               class="form-control form-control-sm mb-2 subject-search-input"
                               placeholder="Поиск предмета..."
                               onkeyup="filterSubjects(this)">

                        <div class="subject-list-container" style="max-height: 200px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 4px; padding: 5px;">
                            @foreach (var subject in Model.AllSubjects)
                            {
                                bool isAssigned = teacher.AssignedSubjects != null && teacher.AssignedSubjects.Any(s => s.Id == subject.Id);
                                <div class="form-check subject-item">
                                    <input class="form-check-input subject-checkbox" type="checkbox" name="selectedSubjectIds" value="@subject.Id" id="chk_@teacher.Id@subject.Id" @(isAssigned ? "checked" : "")>
                                    <label class="form-check-label small" for="chk_@teacher.Id@subject.Id">@subject.Title</label>
                                </div>
                            }
                            <div class="text-muted small text-center no-results" style="display:none;">Нет совпадений</div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-2 border-top pt-2">
                            <div class="form-check mb-0">
                                <input class="form-check-input" type="checkbox" id="selectAll_@teacher.Id" onchange="toggleVisibleSubjects(this)">
                                <label class="form-check-label small text-muted" for="selectAll_@teacher.Id">Все (видимые)</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">Сохранить</button>
                        </div>
                    </form>
                </div>
            </div>
        </td>

        <td class="text-end">
            <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="btn btn-sm btn-warning" style="min-width: 90px;">Изменить</a>
            <form asp-action="DeleteUser" asp-route-id="@teacher.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить преподавателя?');">
                <button type="submit" class="btn btn-sm btn-danger" style="min-width: 90px;">Удалить</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>

<script>
    function filterSubjects(inputElement) {
        const searchTerms = inputElement.value.toLowerCase().split(" ").filter(t => t.length > 0);
        const container = inputElement.closest('form').querySelector('.subject-list-container');
        const items = container.querySelectorAll('.subject-item');
        let hasVisibleItems = false;
        items.forEach(item => {
            const label = item.querySelector('label').innerText.toLowerCase();
            const isMatch = searchTerms.every(term => label.includes(term));
            if (isMatch) { item.style.display = ""; hasVisibleItems = true; } else { item.style.display = "none"; }
        });
        const noResultsMsg = container.querySelector('.no-results');
        if (noResultsMsg) { noResultsMsg.style.display = hasVisibleItems ? "none" : "block"; }
        const selectAllCb = inputElement.closest('form').querySelector('input[id^="selectAll_"]');
        if(selectAllCb) selectAllCb.checked = false;
    }
    function toggleVisibleSubjects(selectAllCheckbox) {
        const form = selectAllCheckbox.closest('form');
        const container = form.querySelector('.subject-list-container');
        const items = container.querySelectorAll('.subject-item');
        items.forEach(item => {
            if (item.style.display !== "none") {
                const checkbox = item.querySelector('.subject-checkbox');
                if (checkbox) { checkbox.checked = selectAllCheckbox.checked; }
            }
        });
    }
</script>
