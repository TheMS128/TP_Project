@model CourseProject.Models.AdminViewModels.Student.CreateStudentViewModel
@{ 
    ViewData["Title"] = "Создать студента"; 
    var groupsList = (IEnumerable<SelectListItem>)ViewBag.Groups;
}

<h2>Создать нового студента</h2>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="CreateStudent" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">ФИО</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email (Логин)</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            
            <div class="mb-3">
                <label class="form-label fw-bold">Группа</label>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start d-flex justify-content-between align-items-center" 
                            type="button" 
                            id="groupDropdownBtn" 
                            data-bs-toggle="dropdown" 
                            aria-expanded="false">
                        -- Без группы --
                    </button>

                    <div class="dropdown-menu w-100 p-3 shadow" aria-labelledby="groupDropdownBtn">
                        
                        <input type="text" class="form-control form-control-sm mb-2" placeholder="Поиск группы..." onkeyup="filterGroupsInForm(this)">

                        <div class="group-list-container" style="max-height: 250px; overflow-y: auto;">
                            
                            <div class="form-check group-item">
                                <input class="form-check-input" type="radio" asp-for="GroupId" value="" id="grp_none" 
                                       onclick="updateDropdownLabel(this, '-- Без группы --')" checked>
                                <label class="form-check-label small text-danger fw-bold" for="grp_none">
                                    -- Без группы --
                                </label>
                            </div>
                            <hr class="my-1">

                            @if (groupsList != null)
                            {
                                foreach (var group in groupsList)
                                {
                                    <div class="form-check group-item">
                                        <input class="form-check-input" type="radio" asp-for="GroupId" value="@group.Value" id="grp_@group.Value" 
                                               onclick="updateDropdownLabel(this, '@group.Text')">
                                        <label class="form-check-label small" for="grp_@group.Value">
                                            @group.Text
                                        </label>
                                    </div>
                                }
                            }
                            <div class="text-muted small text-center no-results" style="display:none;">Нет совпадений</div>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            </div>
            
            <button type="submit" class="btn btn-success">Создать</button>
            <a asp-action="ManageStudents" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>

<script>
    function filterGroupsInForm(inputElement) {
        const searchTerms = inputElement.value.toLowerCase().split(" ").filter(t => t.length > 0);
        const container = inputElement.closest('.dropdown-menu').querySelector('.group-list-container');
        const items = container.querySelectorAll('.group-item');
        let hasVisibleItems = false;
        
        items.forEach(item => {
            const label = item.querySelector('label').innerText.toLowerCase();
            const isMatch = searchTerms.every(term => label.includes(term));
            
            if (isMatch || (inputElement.value === "" && item.querySelector('input').value === "")) { 
                item.style.display = ""; 
                hasVisibleItems = true; 
            } else { 
                item.style.display = "none"; 
            }
        });

        const noResultsMsg = container.querySelector('.no-results');
        if (noResultsMsg) { 
            noResultsMsg.style.display = hasVisibleItems ? "none" : "block"; 
        }
    }

    function updateDropdownLabel(radioInput, text) {
        const btn = document.getElementById('groupDropdownBtn');
        btn.innerText = text;
    }
</script>