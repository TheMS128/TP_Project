@model CourseProject.Models.AdminViewModels.Group.ManageGroupsViewModel
@{
    ViewData["Title"] = "Управление группами";
}

<div class="container py-4">
    <div class="mb-4">
        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Назад в панель администратора
        </a>
        <h2 class="fw-bold mt-2">Управление группами</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3 mt-3">
        <a asp-action="CreateGroup" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Добавить группу
        </a>

        <form asp-action="ManageGroups" method="get" class="d-flex">
            <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control me-2" placeholder="Поиск группы..." style="width: 250px;" />
            <button type="submit" class="btn btn-outline-primary">Поиск</button>
            <a asp-action="ManageGroups" class="btn btn-outline-secondary ms-1">Сброс</a>
        </form>
    </div>

    <table class="table table-hover align-middle table-bordered">
        <thead class="table-light">
        <tr>
            <th class="text-start">Название</th>
            <th class="text-center">Студентов</th>
            <th class="text-end" style="width: 150px;">Действия</th> </tr>
        </thead>
        <tbody>
        @if (Model.Groups != null)
        {
            foreach (var group in Model.Groups)
            {
                <tr>
                    <td class="text-start">@group.GroupName</td>

                    <td class="text-center">
                        <div class="dropdown d-inline-block">
                            <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 140px;">
                                Студентов: @(group.Students?.Count ?? 0)
                            </button>

                            <div class="dropdown-menu p-3 shadow text-start" style="width: 350px;" onclick="event.stopPropagation()">
                                @{
                                    if (Model.AllStudents != null)
                                    {
                                        var availableStudentsForGroup = Model.AllStudents
                                            .Where(s => s.GroupId == null || s.GroupId == group.Id)
                                            .ToList();

                                        if (!Model.AllStudents.Any())
                                        {
                                            <div class="alert alert-warning mb-0 small">
                                                <i class="bi bi-exclamation-circle"></i> В системе нет студентов.
                                            </div>
                                        }
                                        else
                                        {
                                            if (!availableStudentsForGroup.Any())
                                            {
                                                <div class="alert alert-info mb-0 small">
                                                    <i class="bi bi-info-circle"></i> Нет доступных студентов.
                                                </div>
                                            }
                                            else
                                            {
                                                <form asp-action="UpdateGroupStudents" method="post">
                                                    <input type="hidden" name="groupId" value="@group.Id"/>
                                                    <h6 class="dropdown-header px-0">Выберите студентов:</h6>
                                                    <input type="text" class="form-control form-control-sm mb-2 student-search-input" placeholder="Поиск студента..." onkeyup="filterStudents(this)">

                                                    <div class="student-list-container" style="max-height: 200px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 4px; padding: 5px;">
                                                        @foreach (var student in availableStudentsForGroup)
                                                        {
                                                            var isInCurrentGroup = student.GroupId == group.Id;
                                                            <div class="form-check student-item">
                                                                <input class="form-check-input student-checkbox" type="checkbox" name="selectedStudentIds" value="@student.Id" id="chk_@(group.Id)@student.Id" @(isInCurrentGroup ? "checked" : "")>
                                                                <label class="form-check-label small" for="chk_@(group.Id)@student.Id">@student.FullName</label>
                                                            </div>
                                                        }
                                                        <div class="text-muted small text-center no-results" style="display:none;">Нет совпадений</div>
                                                    </div>

                                                    <div class="d-flex justify-content-between align-items-center mt-2 border-top pt-2">
                                                        <div class="form-check mb-0">
                                                            <input class="form-check-input" type="checkbox" id="selectAll_@(group.Id)" onchange="toggleVisibleStudents(this)">
                                                            <label class="form-check-label small text-muted" for="selectAll_@(group.Id)">Все (видимые)</label>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary btn-sm">Сохранить</button>
                                                    </div>
                                                </form>
                                            }
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </td>

                    <td class="text-end text-nowrap">
                        <a asp-action="EditGroup" asp-route-id="@group.Id" class="btn btn-sm btn-warning me-1" title="Редактировать">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form asp-action="DeleteGroup" asp-route-id="@group.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить группу? Студенты станут свободными.');">
                            <button type="submit" class="btn btn-sm btn-danger" title="Удалить">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

<script>
    function filterStudents(inputElement) {
        const searchTerms = inputElement.value.toLowerCase().split(" ").filter(t => t.length > 0);
        const container = inputElement.closest('form').querySelector('.student-list-container');
        const items = container.querySelectorAll('.student-item');
        let hasVisibleItems = false;
        items.forEach(item => {
            const label = item.querySelector('label').innerText.toLowerCase();
            const isMatch = searchTerms.every(term => label.includes(term));
            if (isMatch) { item.style.display = ""; hasVisibleItems = true; } else { item.style.display = "none"; }
        });
        const noResultsMsg = container.querySelector('.no-results');
        if (noResultsMsg) { noResultsMsg.style.display = hasVisibleItems ? "none" : "block"; }
        const selectAllCb = inputElement.closest('form').querySelector('input[id^="selectAll_"]');
        if(selectAllCb) selectAllCb.checked = false;
    }
    
    function toggleVisibleStudents(selectAllCheckbox) {
        const form = selectAllCheckbox.closest('form');
        const container = form.querySelector('.student-list-container');
        const items = container.querySelectorAll('.student-item');
        items.forEach(item => {
            if (item.style.display !== "none") {
                const checkbox = item.querySelector('.student-checkbox');
                if (checkbox) { checkbox.checked = selectAllCheckbox.checked; }
            }
        });
    }
</script>