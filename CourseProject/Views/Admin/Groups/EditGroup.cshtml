@model CourseProject.Models.AdminViewModels.Group.EditGroupViewModel
@{
    ViewData["Title"] = "Редактирование группы";
}

<h2>Редактирование группы</h2>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="EditGroup" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <div class="mb-3">
                <label asp-for="GroupName" class="form-label">Название группы</label>
                <input asp-for="GroupName" class="form-control" required />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Состав группы:</label>

                @{
                    var availableForThisGroup = Model.AvailableStudents
                        .Where(s => s.GroupId == null || s.GroupId == Model.Id)
                        .ToList();
                }

                @if (!Model.AvailableStudents.Any())
                {
                    <div class="alert alert-warning small">
                        <i class="bi bi-exclamation-circle"></i> В системе нет студентов.
                    </div>
                }
                else if (!availableForThisGroup.Any())
                {
                    <div class="alert alert-info small">
                        <i class="bi bi-info-circle"></i> Нет доступных студентов (все остальные распределены по другим группам).
                    </div>
                }
                else
                {
                    <input type="text" class="form-control form-control-sm mb-2" placeholder="Поиск студента..." onkeyup="filterList(this)">
                    
                    <div class="border rounded p-2 student-list-container" style="max-height: 200px; overflow-y: auto;">
                        @foreach (var student in availableForThisGroup)
                        {
                            var isChecked = Model.SelectedStudentIds.Contains(student.Id);
                            
                            <div class="form-check student-item">
                                <input class="form-check-input" type="checkbox" 
                                       name="SelectedStudentIds" 
                                       value="@student.Id" 
                                       id="chk_@student.Id"
                                       @(isChecked ? "checked" : "")>
                                <label class="form-check-label small" for="chk_@student.Id">
                                    @student.FullName
                                </label>
                            </div>
                        }
                        <div class="text-muted small text-center no-results" style="display:none;">Нет совпадений</div>
                    </div>
                    <div class="form-text small">Студенты из других групп здесь не отображаются.</div>
                }
            </div>
           
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-action="ManageGroups" class="btn btn-secondary">Назад</a>
        </form>
    </div>
</div>

<script>
    function filterList(input) {
        const filter = input.value.toLowerCase();
        const container = document.querySelector('.student-list-container');
        if (!container) return; 

        const items = container.querySelectorAll('.student-item');
        let hasVisible = false;

        items.forEach(item => {
            const text = item.textContent.toLowerCase();
            if (text.includes(filter)) {
                item.style.display = "";
                hasVisible = true;
            } else {
                item.style.display = "none";
            }
        });

        const noRes = container.querySelector('.no-results');
        if(noRes) noRes.style.display = hasVisible ? "none" : "block";
    }
</script>