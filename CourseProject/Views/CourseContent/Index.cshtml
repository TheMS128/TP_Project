@using CourseProject.DataBase.Enums
@model CourseProject.DataBase.DbModels.Subject
@{
    ViewData["Title"] = $"Управление: {Model.Title}";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item">
                        @if (isAdmin)
                        {
                            <a asp-controller="Admin" asp-action="ManageSubjects">Все предметы</a>
                        }
                        else
                        {
                            <a asp-controller="Subjects" asp-action="Index">Мои предметы</a>
                        }
                    </li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>
            <h2 class="fw-bold mb-0">
                @Model.Title
                @if (Model.Status == ContentStatus.Draft)
                {
                    <span class="badge bg-warning text-dark fs-6 align-middle">Черновик</span>
                }
            </h2>
        </div>

        <a asp-controller="Subjects" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-dark"
           target="_blank">
            <i class="bi bi-eye"></i> Предпросмотр
        </a>
    </div>

    <div class="row g-4 mb-4">

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 bg-light-hover">
                <div class="card-body text-center p-4">
                    <div
                        class="icon-box bg-primary bg-opacity-10 text-primary mb-3 mx-auto rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <h5 class="fw-bold">Материалы</h5>
                    <p class="text-muted small">Лекции: @(Model.Lectures?.Count ?? 0)</p>
                    <a asp-action="ManageLectures" asp-route-subjectId="@Model.Id"
                       class="btn btn-primary w-100 stretched-link">
                        Лекции
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 bg-light-hover">
                <div class="card-body text-center p-4">
                    <div
                        class="icon-box bg-danger bg-opacity-10 text-danger mb-3 mx-auto rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="bi bi-check2-square"></i>
                    </div>
                    <h5 class="fw-bold">Контроль знаний</h5>
                    <p class="text-muted small">Тесты: @(Model.Tests?.Count ?? 0)</p>
                    <a asp-action="ManageTests" asp-route-subjectId="@Model.Id"
                       class="btn btn-danger w-100 stretched-link">
                        Тесты
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 bg-light-hover">
                <div class="card-body text-center p-4">
                    <div
                        class="icon-box bg-success bg-opacity-10 text-success mb-3 mx-auto rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="bi bi-sliders"></i>
                    </div>
                    <h5 class="fw-bold">Настройки курса</h5>
                    <p class="text-muted small">Доступ групп, статус публикации.</p>

                    <div class="d-grid gap-2 position-relative" style="z-index: 2;">
                        <a asp-controller="Subjects" asp-action="ConfigureGroups" asp-route-id="@Model.Id"
                           class="btn btn-outline-success">
                            <i class="bi bi-people"></i> Группы
                        </a>

                        <div class="dropdown">
                            <button class="btn btn-outline-secondary w-100 dropdown-toggle" type="button"
                                    data-bs-toggle="dropdown">
                                Статус: @(Model.Status == ContentStatus.Published ? "Опубликован" : "Черновик")
                            </button>
                            <ul class="dropdown-menu w-100">
                                <li>
                                    <form asp-controller="Subjects" asp-action="ChangeStatus" method="post">
                                        <input type="hidden" name="id" value="@Model.Id"/>
                                        <input type="hidden" name="status" value="@ContentStatus.Draft"/>
                                        <button type="submit" class="dropdown-item">Черновик</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-controller="Subjects" asp-action="ChangeStatus" method="post">
                                        <input type="hidden" name="id" value="@Model.Id"/>
                                        <input type="hidden" name="status" value="@ContentStatus.Published"/>
                                        <button type="submit" class="dropdown-item">Опубликовать</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-light-hover:hover {
        background-color: #f8f9fa;
        transform: translateY(-3px);
        transition: all 0.2s;
    }
</style>