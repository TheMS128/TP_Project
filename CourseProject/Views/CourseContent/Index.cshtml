@model CourseProject.DataBase.DbModels.Subject
@{
    ViewData["Title"] = $"Контент: {Model.Title}";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<style>
    .admin-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
    }
    .admin-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin: 0 auto 15px;
        font-size: 1.8rem;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">@Model.Title</h2>
            <p class="text-muted">Панель управления материалами курса</p>
        </div>
        <div>
            @if (isAdmin)
            {
                <a asp-controller="Admin" asp-action="ManageSubjects" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> К списку предметов
                </a>
            }
            else
            {
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Мои предметы
                </a>
            }
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 admin-card shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <h5 class="card-title fw-bold">Лекции и файлы</h5>
                    <p class="card-text text-muted small mb-4">Загрузка методичек, презентаций и учебных материалов.</p>
                    <a asp-action="ManageLectures" asp-route-subjectId="@Model.Id" class="btn btn-outline-primary w-100 stretched-link">
                        Перейти к лекциям
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card h-100 admin-card shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-success bg-opacity-10 text-success">
                        <i class="bi bi-ui-checks"></i>
                    </div>
                    <h5 class="card-title fw-bold">Тестирование</h5>
                    <p class="card-text text-muted small mb-4">Создание тестов, управление вопросами и настройками.</p>
                    <a asp-action="ManageTests" asp-route-subjectId="@Model.Id" class="btn btn-outline-success w-100 stretched-link">
                        Перейти к тестам
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>