@model IEnumerable<CourseProject.DataBase.DbModels.Question>
@{
    ViewData["Title"] = "Вопросы теста";
}

<div class="container py-4">
    <div class="mb-4">
        <a asp-action="ManageTests" asp-route-subjectId="@ViewBag.SubjectId" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Назад к списку тестов
        </a>
        <h2 class="fw-bold mt-2">Вопросы: <span class="text-primary">@ViewBag.TestTitle</span></h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="CreateQuestion" asp-route-testId="@ViewBag.TestId" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Добавить вопрос
        </a>

        <div class="d-flex">
            <input type="text" id="questionSearchInput" class="form-control me-2" placeholder="Поиск по тексту..." style="width: 250px;" onkeyup="filterQuestions()" />
            <button type="button" class="btn btn-outline-primary" onclick="filterQuestions()">Поиск</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle table-bordered" id="questionsTable">
            <thead class="table-light">
                <tr>
                    <th class="text-start">Текст вопроса</th>
                    <th class="text-center" style="width: 180px;">Тип</th>
                    <th class="text-center" style="width: 100px;">Баллы</th>
                    <th class="text-end" style="width: 220px;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var q in Model)
                    {
                        <tr class="question-row">
                            <td class="text-start">
                                <span class="fw-bold text-dark">@q.Text</span>
                                @if(q.AnswerOptions != null && q.AnswerOptions.Any())
                                {
                                    <div class="small text-muted mt-1">
                                        <i class="bi bi-list-ul"></i> Вариантов ответа: @q.AnswerOptions.Count
                                    </div>
                                }
                            </td>

                            <td class="text-center">
                                @if (q.Type == "Single")
                                {
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 rounded-pill">
                                        <i class="bi bi-check-circle me-1"></i>Один ответ
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 rounded-pill">
                                        <i class="bi bi-check-all me-1"></i>Несколько
                                    </span>
                                }
                            </td>

                            <td class="text-center">
                                <span class="badge bg-light text-dark border border-secondary">
                                    @q.Points б.
                                </span>
                            </td>

                            <td class="text-end">
                                <a asp-action="EditQuestion" asp-route-id="@q.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Изменить
                                </a>

                                <form asp-action="DeleteQuestion" asp-route-id="@q.Id" method="post" class="d-inline" onsubmit="return confirm('Вы уверены, что хотите удалить этот вопрос?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="bi bi-question-circle display-4 opacity-50"></i>
                            <p class="mt-2 mb-0">В этом тесте пока нет вопросов.</p>
                            <a asp-action="CreateQuestion" asp-route-testId="@ViewBag.TestId" class="btn btn-sm btn-primary mt-3">Создать первый вопрос</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div id="noQuestionsFound" class="text-center py-4 text-muted" style="display: none;">
            По вашему запросу ничего не найдено.
        </div>
    </div>
</div>

<script>
    function filterQuestions() {
        const input = document.getElementById("questionSearchInput");
        const filter = input.value.toLowerCase();
        const table = document.getElementById("questionsTable");
        const rows = table.getElementsByClassName("question-row");
        let hasVisible = false;

        for (let i = 0; i < rows.length; i++) {
            const textCell = rows[i].getElementsByTagName("td")[0];
            if (textCell) {
                const txtValue = textCell.textContent || textCell.innerText;
                if (txtValue.toLowerCase().indexOf(filter) > -1) {
                    rows[i].style.display = "";
                    hasVisible = true;
                } else {
                    rows[i].style.display = "none";
                }
            }
        }

        const noDataMsg = document.getElementById("noQuestionsFound");
        if (noDataMsg) {
            noDataMsg.style.display = hasVisible ? "none" : "block";
        }
    }
</script>