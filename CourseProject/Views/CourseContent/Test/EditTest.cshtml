@using CourseProject.DataBase.Enums
@model CourseProject.Models.CourseContentViewModels.Test.TestViewModel
@{
    ViewData["Title"] = "Редактирование теста";
}

<div class="container py-4">
    <div class="mb-4">
        <a asp-action="ManageTests" asp-route-subjectId="@Model.SubjectId" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Назад к списку тестов
        </a>
        <h2 class="fw-bold mt-2">Редактирование теста</h2>
    </div>

    <hr/>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditTest" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SubjectId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Название теста</label>
                    <input asp-for="Title" class="form-control form-control-lg" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <h5 class="mt-4 mb-3 text-muted border-bottom pb-2">Настройки ограничений</h5>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="TimeLimitMinutes" class="form-label">Лимит времени (мин)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-stopwatch"></i></span>
                            <input asp-for="TimeLimitMinutes" class="form-control" placeholder="Неогр." min="1" />
                        </div>
                        <span asp-validation-for="TimeLimitMinutes" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="MaxAttempts" class="form-label">Попытки</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-arrow-repeat"></i></span>
                            <input asp-for="MaxAttempts" class="form-control" placeholder="Неогр." min="1" />
                        </div>
                        <span asp-validation-for="MaxAttempts" class="text-danger"></span>
                    </div>
 
                    <div class="col-md-4 mb-3">
                        <label asp-for="DaysToComplete" class="form-label">Дней на сдачу</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                            <input asp-for="DaysToComplete" class="form-control" placeholder="Неогр." min="1" />
                        </div>
                        <span asp-validation-for="DaysToComplete" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4 mt-2">
                    <label class="form-label fw-bold">Статус</label>
                    
                    <div class="alert alert-info py-2 small mb-2 d-flex align-items-center">
                        <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                        <span>Тест можно перевести в статус <b>"Опубликован"</b> только если в нём создан хотя бы один вопрос.</span>
                    </div>

                    <div class="border rounded p-3 bg-light">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Status" value="@ContentStatus.Hidden" id="statusHidden">
                            <label class="form-check-label" for="statusHidden"><i class="bi bi-eye-slash text-secondary"></i> Скрыт</label>
                        </div>
                        <div class="form-check form-check-inline ms-3">
                            <input class="form-check-input" type="radio" asp-for="Status" value="@ContentStatus.Published" id="statusPublished">
                            <label class="form-check-label fw-bold text-success" for="statusPublished"><i class="bi bi-check-circle"></i> Опубликован</label>
                        </div>
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">Сохранить изменения</button>
                    <a asp-action="ManageTests" asp-route-subjectId="@Model.SubjectId" class="btn btn-secondary ms-2">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}