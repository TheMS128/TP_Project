@model CourseProject.DataBase.DbModels.Test
@{
    ViewData["Title"] = Model.Title;
    bool canTake = ViewBag.CanTake ?? false;
    bool hasActiveAttempt = ViewBag.HasActiveAttempt ?? false;
    int attemptsUsed = ViewBag.AttemptsUsed ?? 0;
    var pastAttempts = ViewBag.PastAttempts as List<CourseProject.DataBase.DbModels.TestAttempt>;
}

<div class="container py-4">
    <div class="mb-4">
        <a asp-action="Details" asp-route-id="@Model.SubjectId" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Назад к курсу
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <h1 class="fw-bold mb-3">@Model.Title</h1>
            <p class="lead text-muted mb-4">
                Тестирование по предмету <span class="text-dark fw-semibold">@Model.Subject.Title</span>.
            </p>

            <div class="d-flex flex-wrap gap-4 mb-5 pb-3 border-bottom">
                <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle p-2 me-3 text-primary">
                        <i class="bi bi-clock fs-4"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Время на тест</small>
                        <span class="fw-bold fs-5">
                            @(Model.TimeLimitMinutes.HasValue ? $"{Model.TimeLimitMinutes} мин." : "Без лимита")
                        </span>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle p-2 me-3 text-warning">
                        <i class="bi bi-arrow-repeat fs-4"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Попытки</small>
                        <span class="fw-bold fs-5">
                            @attemptsUsed / @(Model.MaxAttempts?.ToString() ?? "∞")
                        </span>
                    </div>
                </div>
                
                @if (Model.DaysToComplete.HasValue)
                {
                    <div class="d-flex align-items-center">
                        <div class="bg-light rounded-circle p-2 me-3 text-danger">
                            <i class="bi bi-calendar-event fs-4"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Срок сдачи</small>
                            <span class="fw-bold fs-5">@Model.DaysToComplete дн.</span>
                        </div>
                    </div>
                }
            </div>

            <div class="mb-5">
                @if (canTake)
                {
                    if (hasActiveAttempt)
                    {
                        <div class="alert alert-warning border-warning d-flex align-items-center mb-3">
                            <i class="bi bi-exclamation-circle fs-4 me-3"></i>
                            <div>
                                <strong>У вас есть незавершенная попытка.</strong><br/>
                                Вы можете продолжить её с того места, где остановились.
                            </div>
                        </div>
                        <a asp-action="TakeTest" asp-route-testId="@Model.Id" class="btn btn-warning btn-lg px-5 rounded-pill shadow-sm">
                            <i class="bi bi-play-fill me-2"></i> Продолжить тест
                        </a>
                    }
                    else
                    {
                        <a asp-action="TakeTest" asp-route-testId="@Model.Id" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                            <i class="bi bi-play-fill me-2"></i> Начать тестирование
                        </a>
                    }
                }
                else
                {
                    <div class="alert alert-secondary d-flex align-items-center">
                        <i class="bi bi-lock-fill fs-4 me-3 opacity-50"></i>
                        <div>
                            <strong>Тестирование недоступно.</strong><br/>
                            Вы исчерпали все попытки или срок сдачи истек.
                        </div>
                    </div>
                }
            </div>

            @if (pastAttempts != null && pastAttempts.Any())
            {
                <h5 class="fw-bold mb-3 mt-5">Ваши результаты</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle border-top">
                        <thead class="table-light small text-uppercase text-muted">
                            <tr>
                                <th class="py-3 ps-4">Дата завершения</th>
                                <th class="py-3 text-center">Результат</th>
                                <th class="py-3 text-end pe-4">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attempt in pastAttempts)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-check2-circle text-success me-2"></i>
                                            @attempt.EndTime?.ToString("dd MMMM yyyy, HH:mm")
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border fs-6">
                                            @attempt.Score баллов
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="TestResult" asp-route-attemptId="@attempt.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            Подробнее
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        
        <div class="col-lg-4 d-none d-lg-block ps-lg-5 border-start">
            <div class="sticky-top" style="top: 2rem;">
                <h6 class="text-uppercase text-muted fw-bold small mb-3">Информация</h6>
                <div class="alert alert-light border">
                    <p class="mb-2 small">
                        <i class="bi bi-info-circle-fill text-primary me-1"></i>
                        Перед началом убедитесь, что у вас стабильное подключение к интернету.
                    </p>
                    <p class="mb-0 small text-muted">
                        Таймер запустится сразу после нажатия кнопки "Начать".
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>