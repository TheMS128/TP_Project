@model CourseProject.DataBase.DbModels.Subject

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <div class="mb-3">
        <a asp-action="Index" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Назад к списку курсов
        </a>
    </div>

    <div class="mb-4">
        <h1 class="fw-bold display-6">@Model.Title</h1>
        <p class="text-muted lead fs-6">@Model.Description</p>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100 border-0 bg-light">
                <div class="card-header bg-white border-0 pt-4 pb-2">
                    <h4 class="card-title text-primary fw-bold"><i class="bi bi-collection-play"></i> Материалы</h4>
                </div>
                <div class="card-body">
                    @if (Model.Lectures != null && Model.Lectures.Any())
                    {
                        <div class="list-group list-group-flush bg-transparent">
                            @foreach (var lecture in Model.Lectures)
                            {
                                <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0 border-bottom">
                                    <div class="d-flex align-items-center overflow-hidden">
                                        <div class="me-3 text-secondary fs-4">
                                            <i class="bi bi-file-earmark-pdf"></i>
                                        </div>
                                        <div class="text-truncate">
                                            <div class="fw-bold text-truncate" style="max-width: 250px;">@lecture.Title</div>
                                            <small class="text-muted">@lecture.DateAdded.ToString("d MMMM")</small>
                                        </div>
                                    </div>
                                    
                                    <a asp-controller="Subjects" asp-action="DownloadLecture" asp-route-id="@lecture.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        <i class="bi bi-download me-1"></i> Скачать
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-journal-x fs-1 opacity-50"></i>
                            <p class="mt-2">Материалов пока нет.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100 border-0 bg-light">
                <div class="card-header bg-white border-0 pt-4 pb-2">
                    <h4 class="card-title text-danger fw-bold"><i class="bi bi-check2-circle"></i> Тестирование</h4>
                </div>
                <div class="card-body">
                    @if (Model.Tests != null && Model.Tests.Any())
                    {
                        <div class="list-group list-group-flush bg-transparent">
                            @foreach (var test in Model.Tests)
                            {
                                <div class="list-group-item bg-transparent px-0 py-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1 fw-bold">@test.Title</h6>
                                            <div class="small text-muted">
                                                <span class="me-2"><i class="bi bi-clock"></i> @(test.TimeLimitMinutes > 0 ? test.TimeLimitMinutes + " мин" : "Без лимита")</span>
                                                <span><i class="bi bi-arrow-repeat"></i> Попыток: @(test.MaxAttempts > 0 ? test.MaxAttempts.ToString() : "∞")</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <a asp-controller="Subjects" asp-action="StartTest" asp-route-testId="@test.Id" class="btn btn-primary btn-sm">
                                            Начать тест <i class="bi bi-caret-right-fill ms-1"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-clipboard-x fs-1 opacity-50"></i>
                            <p class="mt-2">Тестов пока нет.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>