@model CourseProject.DataBase.DbModels.Subject
@{ ViewData["Title"] = Model.Title; }

<div class="container py-4">
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted"><i class="bi bi-arrow-left"></i> Назад к моим курсам</a>
        <h1 class="fw-bold mt-2">@Model.Title</h1>
        <p class="lead text-muted">@Model.Description</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0"><i class="bi bi-collection-play me-2"></i>Материалы курса</h4>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.Lectures != null && Model.Lectures.Any())
                    {
                        foreach (var lecture in Model.Lectures)
                        {
                            <a href="@lecture.FilePath" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                                <div>
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> @lecture.Title
                                </div>
                                <small class="text-muted">@lecture.DateAdded.ToString("d MMMM yyyy")</small>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">Нет доступных лекций.</div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h4 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Тестирование</h4>
                </div>
                <div class="card-body p-0">
                     @if (Model.Tests != null && Model.Tests.Any())
                    {
                         <div class="list-group list-group-flush">
                            @foreach (var test in Model.Tests)
                            {
                                <div class="list-group-item p-3">
                                    <h6 class="mb-1">@test.Title</h6>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small class="text-muted">Вопросов: @(test.Questions?.Count ?? 0)</small>
                                        <a href="#" class="btn btn-sm btn-primary">Начать тест</a>
                                    </div>
                                </div>
                            }
                         </div>
                    }
                     else
                    {
                        <div class="p-4 text-center text-muted">Нет доступных тестов.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>