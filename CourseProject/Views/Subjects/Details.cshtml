@using CourseProject.DataBase.Enums
@model CourseProject.DataBase.DbModels.Subject

@{
    ViewData["Title"] = Model.Title;
    bool isStudent = ViewBag.IsStudent;
    bool canEdit = ViewBag.CanEdit;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Мои курсы</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
            <h1 class="fw-bold display-6">@Model.Title</h1>
            <p class="text-muted lead fs-6">@Model.Description</p>
        </div>

        @if (canEdit)
        {
            <div class="d-flex gap-2">
                <a asp-controller="CourseContent" asp-action="Index" asp-route-subjectId="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-gear-fill"></i> Управление контентом
                </a>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 pt-3 pb-0">
                    <h4 class="card-title text-primary"><i class="bi bi-collection-play"></i> Лекции</h4>
                </div>
                <div class="card-body">
                    @if (Model.Lectures != null && Model.Lectures.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var lecture in Model.Lectures)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div class="d-flex align-items-center overflow-hidden">
                                        <div class="me-3 text-secondary fs-4">
                                            <i class="bi bi-file-earmark-pdf"></i>
                                        </div>
                                        <div class="text-truncate">
                                            <div class="fw-bold text-truncate" style="max-width: 250px;">@lecture.Title</div>
                                            <small class="text-muted">@lecture.DateAdded.ToString("d MMMM")</small>
                                        </div>
                                    </div>
                                    
                                    <div>
                                        <a asp-controller="Subjects" asp-action="DownloadLecture" asp-route-id="@lecture.Id" class="btn btn-sm btn-light text-primary">
                                            <i class="bi bi-download"></i>
                                        </a>

                                        @if (canEdit)
                                        {
                                            <a asp-controller="CourseContent" asp-action="EditLecture" asp-route-id="@lecture.Id" class="btn btn-sm btn-light text-warning ms-1">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-journal-x fs-1"></i>
                            <p>Лекций пока нет.</p>
                        </div>
                    }
                </div>
                @if (canEdit)
                {
                    <div class="card-footer bg-white border-top-0 pb-3">
                        <a asp-controller="CourseContent" asp-action="CreateLecture" asp-route-subjectId="@Model.Id" class="btn btn-sm btn-outline-success w-100">
                            <i class="bi bi-plus-lg"></i> Добавить лекцию
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 pt-3 pb-0">
                    <h4 class="card-title text-danger"><i class="bi bi-check2-circle"></i> Тесты</h4>
                </div>
                <div class="card-body">
                    @if (Model.Tests != null && Model.Tests.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var test in Model.Tests)
                            {
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1 fw-bold">@test.Title</h6>
                                            <div class="small text-muted">
                                                <span class="me-2"><i class="bi bi-clock"></i> @(test.TimeLimitMinutes > 0 ? test.TimeLimitMinutes + " мин" : "Без лимита")</span>
                                                <span><i class="bi bi-arrow-repeat"></i> Попыток: @(test.MaxAttempts > 0 ? test.MaxAttempts.ToString() : "∞")</span>
                                            </div>
                                        </div>
                                        
                                        @if (canEdit)
                                        {
                                            if (test.Status == ContentStatus.Draft)
                                            {
                                                <span class="badge bg-secondary">Черновик</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Опубликован</span>
                                            }
                                        }
                                    </div>

                                    <div class="d-grid gap-2">
                                        @if (isStudent)
                                        {
                                            <a asp-controller="Subjects" asp-action="StartTest" asp-route-testId="@test.Id" class="btn btn-primary btn-sm">
                                                Начать тест <i class="bi bi-caret-right-fill"></i>
                                            </a>
                                        }
                                        else if (canEdit)
                                        {
                                            <div class="btn-group" role="group">
                                                <a asp-controller="CourseContent" asp-action="ManageQuestions" asp-route-testId="@test.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-list-check"></i> Вопросы
                                                </a>
                                                <a asp-controller="CourseContent" asp-action="EditTest" asp-route-id="@test.Id" class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-gear"></i> Настройки
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-clipboard-x fs-1"></i>
                            <p>Тестов пока нет.</p>
                        </div>
                    }
                </div>
                @if (canEdit)
                {
                    <div class="card-footer bg-white border-top-0 pb-3">
                        <a asp-controller="CourseContent" asp-action="CreateTest" asp-route-subjectId="@Model.Id" class="btn btn-sm btn-outline-success w-100">
                            <i class="bi bi-plus-lg"></i> Создать тест
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>