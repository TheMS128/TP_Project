@model IEnumerable<CourseProject.DataBase.DbModels.Subject>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Все предметы" : "Мои курсы";
    bool isAdmin = ViewBag.IsAdmin ?? false;
    bool isStudent = User.IsInRole("Student");
    bool isTeacher = User.IsInRole("Teacher");
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">
                @if (isStudent) { <i class="bi bi-mortarboard-fill text-primary"></i> <span>Моё обучение</span> }
                else if (isTeacher) { <i class="bi bi-briefcase-fill text-success"></i> <span>Мои предметы</span> }
                else { <i class="bi bi-grid-fill text-secondary"></i> <span>Все предметы</span> }
            </h1>
        </div>

        @if (isAdmin)
        {
            <a asp-controller="Admin" asp-action="CreateSubject" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Новый предмет
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-inbox display-1 opacity-25"></i>
            <p class="mt-3">Список пуст.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow transition-effect">
                        <div class="card-header bg-white border-0 pt-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title fw-bold text-dark mb-0 text-truncate" style="max-width: 85%;">
                                    @item.Title
                                </h5>
                                @if (!isStudent)
                                {
                                    @if(item.Status == CourseProject.DataBase.Enums.ContentStatus.Published) 
                                    { <i class="bi bi-circle-fill text-success small" title="Опубликован"></i> }
                                    else 
                                    { <i class="bi bi-circle-fill text-warning small" title="Черновик"></i> }
                                }
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <p class="card-text text-muted small clamp-text">
                                @(item.Description ?? "Нет описания")
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top small text-muted">
                                <span><i class="bi bi-file-earmark-text"></i> @(item.Lectures?.Count ?? 0)</span>
                                <span><i class="bi bi-check-circle"></i> @(item.Tests?.Count ?? 0)</span>
                                @if(!isStudent) {
                                    <span><i class="bi bi-people"></i> @(item.EnrolledGroups?.Count ?? 0)</span>
                                }
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white border-top-0 pb-3">
                            <div class="d-grid">
                                @if (isStudent)
                                {
                                    <a asp-controller="Subjects" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                        Открыть курс
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="CourseContent" asp-action="Index" asp-route-subjectId="@item.Id" class="btn btn-primary">
                                        <i class="bi bi-gear-fill"></i> Управление
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover { transform: translateY(-3px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; }
    .transition-effect { transition: all 0.3s ease; }
    .clamp-text { display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
</style>