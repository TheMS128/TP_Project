@model IEnumerable<CourseProject.DataBase.DbModels.Subject>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Все предметы" : "Мои курсы";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">
                @if (User.IsInRole("Student"))
                {
                    <i class="bi bi-mortarboard-fill text-primary"></i> <span>Моё обучение</span>
                }
                else if (User.IsInRole("Teacher"))
                {
                    <i class="bi bi-briefcase-fill text-success"></i> <span>Мои предметы</span>
                }
                else
                {
                    <i class="bi bi-grid-fill text-secondary"></i> <span>Все предметы (Админ)</span>
                }
            </h1>
            <p class="text-muted">Выберите предмет, чтобы перейти к материалам.</p>
        </div>

        @if (isAdmin)
        {
            <a asp-controller="Admin" asp-action="CreateSubject" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Новый предмет
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted opacity-25"><i class="bi bi-inbox"></i></div>
            <h4 class="mt-3 text-muted">Курсов пока нет</h4>
            <p>Как только вас добавят в группу или назначат преподавателем, курсы появятся здесь.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow transition-effect">
                        <div class="card-header bg-primary text-white border-0" style="height: 10px; padding: 0;"></div>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-dark">
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark stretched-link">
                                    @item.Title
                                </a>
                            </h5>
                            
                            <p class="card-text text-muted small flex-grow-1">
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    @if (item.Description.Length > 100)
                                    {
                                        @item.Description.Substring(0, 100)<span>...</span>
                                    }
                                    else
                                    {
                                        @item.Description
                                    }
                                }
                                else
                                {
                                    <span class="fst-italic">Нет описания</span>
                                }
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                <div class="small text-muted">
                                    <i class="bi bi-file-earmark-text"></i> Лекций: @(item.Lectures?.Count ?? 0)
                                </div>
                                <div class="small text-muted">
                                    <i class="bi bi-check-circle"></i> Тестов: @(item.Tests?.Count ?? 0)
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white border-top-0 pb-3">
                            <div class="d-grid">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    Открыть курс
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition-effect {
        transition: all 0.3s ease;
    }
</style>