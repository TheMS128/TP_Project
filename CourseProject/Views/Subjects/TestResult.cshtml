@model CourseProject.DataBase.DbModels.TestAttempt
@{
    ViewData["Title"] = "Результат теста";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-success bg-opacity-10 text-success rounded-circle" style="width: 80px; height: 80px;">
                    <i class="bi bi-check-lg display-4"></i>
                </div>
            </div>

            <h2 class="fw-bold mb-2">Тест завершен!</h2>
            <p class="text-muted fs-5 mb-5">@Model.Test.Title</p>

            <div class="card border-0 bg-light mb-5">
                <div class="card-body py-5">
                    <h6 class="text-uppercase text-muted fw-bold small mb-2">Ваш результат</h6>
                    <h1 class="display-1 fw-bold text-dark mb-0">@Model.Score</h1>
                    <span class="text-muted">баллов</span>
                </div>
            </div>

            <div class="d-grid gap-3 d-sm-flex justify-content-center">
                <a asp-action="Details" asp-route-id="@Model.Test.SubjectId" class="btn btn-outline-primary px-4">
                    <i class="bi bi-arrow-left me-2"></i> Вернуться к курсу
                </a>
                <a asp-action="StartTest" asp-route-testId="@Model.TestId" class="btn btn-primary px-4">
                    Страница теста
                </a>
            </div>

        </div>
    </div>
</div>