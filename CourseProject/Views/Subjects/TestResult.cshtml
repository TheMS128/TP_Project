@model CourseProject.DataBase.DbModels.TestAttempt
@{
    ViewData["Title"] = "Результат";
}

<div class="container mt-5 text-center">
    <div class="card shadow mx-auto" style="max-width: 500px;">
        <div class="card-body py-5">
            <div class="mb-3 text-success">
                <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
            </div>
            
            <h2 class="card-title">Тест завершен!</h2>
            <p class="text-muted">@Model.Test.Title</p>
            <hr />
            <h1 class="display-4 fw-bold">@Model.Score</h1>
            <p class="text-uppercase text-muted small">Набрано баллов</p>
            
            <div class="mt-4">
                <a asp-action="Details" asp-route-id="@Model.Test.SubjectId" class="btn btn-outline-primary">
                    Вернуться к курсу
                </a>
            </div>
        </div>
    </div>
</div>