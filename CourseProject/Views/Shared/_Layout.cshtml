<!DOCTYPE html>
<html lang="ru" class="h-100">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Система обучения</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CourseProject.styles.css" asp-append-version="true"/>
    
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-custom {
            background-color: #ffffff;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 800;
            letter-spacing: -0.5px;
            font-size: 1.5rem;
        }

        .nav-link {
            font-weight: 500;
        }
        
        .nav-link:hover {
            color: #0d6efd !important;
        }
    </style>
</head>
<body class="d-flex flex-column h-100">

<header>
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom py-3"> 
        <div class="container">
            <a class="navbar-brand text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-mortarboard-fill me-2"></i>EduSystem
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 ms-lg-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark me-3" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        
                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-dark me-3" asp-controller="Admin" asp-action="ManageSubjects">
                                    Все курсы
                                </a>
                            }
                            else
                            {
                                <a class="nav-link text-dark me-3" asp-controller="Subjects" asp-action="Index">
                                    Мои курсы
                                </a>
                            }
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill"></i> Администрирование
                                </a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item me-3 d-none d-lg-block">
                            <div class="fw-bold text-dark">@User.Identity.Name</div>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-danger btn-sm px-3 rounded-pill" asp-controller="Account" asp-action="Logout">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary px-4 rounded-pill fw-bold" asp-controller="Account" asp-action="Login">Войти</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="flex-grow-1"> 
    <div class="container h-100">
        @RenderBody()
    </div>
</main>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>